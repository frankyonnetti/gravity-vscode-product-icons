@font-face {
	font-family: "{{ name }}";
	font-display: block;
	src: {{{ fontSrc }}};
}

.gravityicon[class*='gravityicon-'] {
	font: normal normal normal 16px/1 "{{ name }}";
	display: inline-block;
	text-decoration: none;
	text-rendering: auto;
	text-align: center;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
}

/*---------------------
 *  Icons
 *-------------------*/

{{# each codepoints }}
.{{ ../prefix }}-{{ @key }}::before { content: "\\{{ codepoint this }}" }
{{/ each }}
